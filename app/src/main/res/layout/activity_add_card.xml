<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171616"
    tools:context=".Add_Card_Activity">


    <EditText
        android:id="@+id/Add_Card_Full_Name"
        android:layout_width="266dp"
        android:layout_height="61dp"
        android:background="@drawable/text_frame"
        android:gravity="center_horizontal"
        android:hint="Usarname Full Name"
        android:inputType="text"
        android:paddingHorizontal="30dp"
        android:paddingVertical="15dp"
        android:textColorHint="@color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19" />

    <EditText
        android:id="@+id/Add_Card_Card_Number"
        android:layout_width="265dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/text_frame"
        android:gravity="center_horizontal"
        android:hint="Card Number"
        android:inputType="number"
        android:paddingHorizontal="30dp"
        android:paddingVertical="15dp"
        android:textColorHint="@color/black"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Add_Card_Full_Name"
        app:layout_constraintVertical_bias="0.031" />

    <EditText
        android:id="@+id/Add_Card_CVC"
        android:layout_width="129dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_frame"
        android:gravity="center_horizontal"
        android:hint="CVC"
        android:inputType="number"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:textColorHint="@color/black"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.255"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Add_Card_Card_Number"
        app:layout_constraintVertical_bias="0.037" />

    <EditText
        android:id="@+id/Add_Card_Valid_Thru"
        android:layout_width="129dp"
        android:layout_height="43dp"
        android:background="@drawable/text_frame"
        android:gravity="center_horizontal"
        android:hint="Valid Thru"
        android:inputType="date"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toEndOf="@+id/Add_Card_CVC"
        app:layout_constraintTop_toBottomOf="@+id/Add_Card_Card_Number"
        app:layout_constraintVertical_bias="0.083" />

    <EditText
        android:id="@+id/Add_Card_City"
        android:layout_width="261dp"
        android:layout_height="55dp"
        android:background="@drawable/text_frame"
        android:gravity="center_horizontal"
        android:hint="User's Address"
        android:inputType="text"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:textColorHint="@color/black"
        android:textSize="27dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Add_Card_Card_Number"
        app:layout_constraintVertical_bias="0.254" />

    <EditText
        android:id="@+id/Add_Card_ZIP"
        android:layout_width="261dp"
        android:layout_height="55dp"
        android:background="@drawable/text_frame"
        android:gravity="center_horizontal"
        android:hint="ZIP Or Portal Card"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:textColorHint="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Add_Card_City"
        app:layout_constraintVertical_bias="0.149" />

    <TextView
        android:id="@+id/Add_Card_Add_Button"
        android:layout_width="144dp"
        android:layout_height="61dp"
        android:background="@drawable/text_frame"
        android:gravity="center_horizontal"
        android:paddingHorizontal="30dp"
        android:paddingVertical="12dp"
        android:text="ADD"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Add_Card_ZIP"
        app:layout_constraintVertical_bias="0.255" />


</androidx.constraintlayout.widget.ConstraintLayout>